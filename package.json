{
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"next dev\"",
    "backend": "cd backend && node index.js",

    "ci:e2e": "start-server-and-test start:prod http://127.0.0.1:3000 \"playwright install --with-deps && playwright test --reporter=line\"",

    "build": "next build",
    "start:prod": "concurrently \"cd backend && node index.js\" \"next start -p 3000\"",

    "test": "playwright test",
    "test:ui": "playwright test",
    "test:report": "playwright show-report",
    "test:ci": "playwright install --with-deps && playwright test --reporter=line"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "concurrently": "^8.2.2",
    "start-server-and-test": "^2.0.0",
    "next": "^13.5.0"

  }
}
